    <http:listener-config name="HTTP_Listener_Configuration" host="0.0.0.0" port="8081" doc:name="HTTP Listener Configuration"/>
    <db:mysql-config name="MySQL_Configuration" host="localhost" port="3306" user="root" password="Welcome123" database="mahesh" doc:name="MySQL Configuration"/>
    <flow name="getFlightsFlow">
        <http:listener config-ref="HTTP_Listener_Configuration" path="/flights" allowedMethods="GET" doc:name="HTTP"/>
        <db:select config-ref="MySQL_Configuration" doc:name="Database">
            <db:parameterized-query><![CDATA[select *from flights;]]></db:parameterized-query>
        </db:select>
        <dw:transform-message doc:name="Transform Message" metadata:id="4d4489b0-b32f-4394-bc40-8275f12fe489">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
payload map ((payload01 , indexOfPayload01) -> {
	ID: payload01.id,
	price: payload01.code,
	plane: {
		type: payload01.flight_name
	}
})]]></dw:set-payload>
        </dw:transform-message>
    </flow>
    <flow name="getFlightsByIDFlow">
        <http:listener config-ref="HTTP_Listener_Configuration" path="/flights/{id}" allowedMethods="GET" doc:name="HTTP"/>
        <db:select config-ref="MySQL_Configuration" doc:name="Database">
            <db:parameterized-query><![CDATA[select *from flights

where f_id=#[message.inboundProperties.'http.query.params'.f_id]]]></db:parameterized-query>
        </db:select>
        <dw:transform-message doc:name="Transform Message" metadata:id="0a47006c-a6fe-4981-a33e-aa4b1ddb0894">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
payload map ((payload01 , indexOfPayload01) -> {
	ID: payload01.f_id,
	price: payload01.cost,
	plane: {
		type: payload01.f_name
	}
})]]></dw:set-payload>
        </dw:transform-message>
    </flow>
    <flow name="indian-airwaysFlow">
        <http:listener config-ref="HTTP_Listener_Configuration" path="/flights" allowedMethods="POST" doc:name="HTTP"/>
        <set-payload value="{&quot;message&quot;:&quot;flight added&quot;}" doc:name="Set Payload"/>
    </flow>
</mule>
